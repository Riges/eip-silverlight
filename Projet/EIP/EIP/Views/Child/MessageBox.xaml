<controls:ChildWindow
    x:Class="EIP.MessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    Title="Message">

  <Grid x:Name="LayoutRoot" Width="540">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

      <TextBox x:Name="MessageTextBox" Grid.Row="0" Height="90" TextWrapping="Wrap" IsReadOnly="True"
               VerticalScrollBarVisibility="Auto"/>

        <Button x:Name="OKButton" Grid.Row="1" Click="OKButton_Click"
        Width="75" Height="23" HorizontalAlignment="Right" Margin="0,10,90,0"
        TabIndex="0" Content="OK" Visibility="Collapsed"/>
        <Button x:Name="CancelButton" Grid.Row="1" Click="CancelButton_Click"
        Width="75" Height="23" HorizontalAlignment="Right" Margin="0,10,0,0"
        TabIndex="0" Content="Annuler" Visibility="Collapsed"/>
      
        

    </Grid>

</controls:ChildWindow>