<controls:ChildWindow x:Class="EIP.Views.Controls.ProgressUploadPhotos"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="ProgressUploadPhotos">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Name="sendPhotoText" Text=" " HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"></TextBlock>
        
        <Image Grid.Row="1" Name="sendPhotoImg" HorizontalAlignment="Center" Height="180" Stretch="Uniform"></Image>

        <Button x:Name="CancelButton" Content="Annuler" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Grid.Row="2" />
        <!--<Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />-->
    </Grid>
</controls:ChildWindow>