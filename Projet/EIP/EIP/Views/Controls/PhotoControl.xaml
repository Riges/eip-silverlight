<UserControl x:Class="EIP.Views.Controls.PhotoControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
           
        </Grid.RowDefinitions>

        <Image Name="imgPhoto" Grid.Row="0" MaxWidth="500" Stretch="Uniform" VerticalAlignment="Top"></Image> <!--Width="450"-->
        <!--<TextBlock Name="titlePhoto" Text="" Grid.Row="1" VerticalAlignment="Center" Margin="0,15,0,15" HorizontalAlignment="Center"></TextBlock>-->
    </Grid>
</UserControl>
