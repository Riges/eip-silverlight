<UserControl x:Class="EIP.Views.Controls.NotificationPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   Width="250" Height="80" VerticalAlignment="Bottom" HorizontalAlignment="Right">
    <Border BorderThickness="5" BorderBrush="Black">
        <StackPanel x:Name="LayoutRoot" Background="White">
            <TextBlock Margin="5" Text="See the popup?" x:Name="TextToDisplay" />
            <Button  HorizontalAlignment="Right" Margin="0,15,5,0" Content="X" Click="Button_Click"/>
        </StackPanel>
    </Border>
</UserControl>
