<UserControl x:Class="EIP.Views.Controls.ListeComptes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="{StaticResource BgColor}">
        <StackPanel>
            <StackPanel Orientation="Vertical" Name="LayoutPanel">

            </StackPanel>

           
            <HyperlinkButton Style="{StaticResource HyperlinkButtonFonceStyle}" Click="HyperlinkButton_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../../Assets/Images/ajouter.png" Width="16" Margin="0,0,5,0"></Image>
                    <TextBlock Text="Ajouter un compte/service"></TextBlock>
                </StackPanel>
            </HyperlinkButton>
           

            
        </StackPanel>
    </Grid>
</UserControl>
